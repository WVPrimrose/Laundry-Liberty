{{#extend "main"}}
  {{#content "body"}}
    <h1>Create New Order</h1>
    <form action="/api/orders/new" method="POST">
      <label for="service_type">Service Type:</label>
      <select name="service_type" id="service_type">
        <option value="Wash & Fold">Wash & Fold</option>
        <option value="Dry Cleaning">Dry Cleaning</option>
      </select>
      <label for="pick_up_time">Pick-Up Time:</label>
      <input type="datetime-local" name="pick_up_time" id="pick_up_time" required>
      <label for="delivery_time">Delivery Time:</label>
      <input type="datetime-local" name="delivery_time" id="delivery_time" required>
      <button type="submit">Create Order</button>
    </form>
  {{/content}}
{{/extend}}
